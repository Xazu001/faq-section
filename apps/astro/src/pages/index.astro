---
import Layout from '@/src/layouts/Layout.astro'
import metadataFetch from '@/utils/metadata.fetch'
import sanityFetch from '../utils/sanity.fetch'
import CirclePlus from '@/src/components/icons/CirclePlus'
import CircleMinus from '@/src/components/icons/CircleMinus'
import Decoration from '@/src/components/icons/Decoration'
import FaqMore from '@/src/components/home/FaqMore.astro'

const metadata = await metadataFetch('Index_Page')

const faqData = await sanityFetch({ query: '*[_type == "Faq_Collection"]' })
const fixedFaq =
  faqData[0]?.faqs?.map((faq) => ({
    question: faq.question?.[0]?.children?.[0]?.text,
    answer: faq.answer?.[0]?.children?.[0]?.text,
  })) || []

const visibleQuestions = 2
const allQuestions = fixedFaq?.length ?? 0
---

<Layout
  path=""
  title={metadata.title ?? ''}
  description={metadata.description ?? ''}
  openGraphImage={metadata.openGraphImage}
>
  <section id="faq">
    <div>
      <div class="header">
        <h3><Decoration size="2.9rem" /><span>Pytaj</span>, jakby jutra miało nie być. Odpowiemy!</h3>
      </div>
      <ul>
        {
          fixedFaq.map((faq, index) => (
            <li class={index < visibleQuestions ? '' : 'display-none'}>
              <button>
                <strong>{(index + 1).toString().padStart(2, '0')}</strong>
                <div>
                  <div class="question">
                    <p>{faq.question}</p>
                    <div class="icons">
                      <CirclePlus
                        title="Green circle with plus inside"
                        size="2.4rem"
                        aria-label="Show Answer"
                        className="icon plus"
                      />
                      <CircleMinus
                        title="Green circle with minus inside"
                        size="2.4rem"
                        aria-label="Hide Answer"
                        className="icon minus hidden"
                      />
                    </div>
                  </div>
                  <div class="answer">
                    <p>{faq.answer}</p>
                  </div>
                </div>
                <div class="line-box">
                  <div class="line" />
                </div>
              </button>
            </li>
          ))
        }
      </ul>
      <FaqMore visible={visibleQuestions > allQuestions ? allQuestions : visibleQuestions} all={allQuestions} />
    </div>
  </section>
</Layout>
<script>
  // ----- Toggle FAQ items
  const faqItems = document.querySelectorAll('#faq li button')!
  faqItems.forEach((el) => {
    el.addEventListener('click', () => {
      el.parentElement?.toggleAttribute('data-expanded')
      el.querySelector('.minus')?.classList.toggle('hidden')
      el.querySelector('.plus')?.classList.toggle('hidden')
    })
  })
</script>
<style>
  section {
    padding: 16rem 0;
    min-height: 101vh;
  }

  .header svg {
    display: inline;
    vertical-align: middle;
  }

  .header span {
    margin-left: 0.9rem;
  }

  .header span {
    background: linear-gradient(280deg, var(--accent-1), var(--accent-2));
    color: transparent;
    -webkit-background-clip: text;
  }

  img {
    width: 50rem;
  }

  ul {
    margin-top: 1.2rem;
  }

  button {
    width: 100%;
    display: flex;
    gap: 3.2rem;
    padding: 2rem 1.6rem;
    text-align: left;
    position: relative;
  }

  .line-box {
    position: absolute;
    bottom: 0;
    width: 100%;
    background: #75758a;
    overflow: hidden;
  }

  .line {
    height: 2px;
  }

  li[data-expanded] .line {
    background: linear-gradient(280deg, var(--accent-1), var(--accent-2));
    animation: line-fluid-expand 0.5s var(--cubic-bezier) both;
  }

  li:not([data-expanded]) .line {
    transform: translateX(0);
    animation: none;
  }

  button strong {
    color: #c6cdcc;
    width: 4.8rem;
  }

  .question {
    display: flex;
    gap: 3.2rem;
    justify-content: space-between;
    align-items: center;
  }

  .icon {
    flex-shrink: 0;
  }

  li .answer {
    max-height: 500px;
    overflow: hidden;
    padding-top: 2rem;
    padding-bottom: 2.4rem;
    transition: 0.3s var(--cubic-bezier);
  }

  li:not([data-expanded]) .answer {
    max-height: 0;
    padding-top: 0;
    padding-bottom: 0;
  }

  .icons {
    position: relative;
  }

  .minus {
    position: absolute;
    top: 0;
    left: 0;
  }

  .hidden {
    opacity: 0;
  }

  .icon {
    flex-shrink: 0;
    transition: 0.3s linear;
  }

  .slide-in {
    animation: slide-in 0.3s ease-out;
  }

  @media (prefers-reduced-motion: reduce) {
    li .answer {
      transition: none;
    }

    .icon {
      transition: none;
    }

    .slide-in {
      animation: none;
    }

    li[data-expanded] .line {
      animation: none;
    }
  }

  @keyframes slide-in {
    0% {
      opacity: 0;
      transform: translateX(-10px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes line-fluid-expand {
    0% {
      width: 10%;
      transform: translateX(0);
    }
    40% {
      transform: translateX(100%);
    }
    100% {
      width: 100%;
      transform: translateX(0);
    }
  }
</style>
